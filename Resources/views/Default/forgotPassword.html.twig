{% extends "YepsuaThemeBundle::auth_layout.html.twig" %}

{% block layout_panel_title %}
<div class="panel-heading"><span class="glyphicon glyphicon-plus"></span> Forgot your password?</div>
{% endblock %}


{% block layout_form %}
<div class="col-md-12">
    <div class="input-group">
        <label for="txtPassword" class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></label>
        <input id="txtEmail" type="text" class="form-control" placeholder="Email">
    </div>
    <br/>
    <div style="float:right">
        <button  type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-log-in"></span>
            Continue
        </button>
    </div>
</div>
{% endblock layout_form %}