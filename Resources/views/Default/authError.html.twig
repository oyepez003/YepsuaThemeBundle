{% extends "YepsuaThemeBundle::auth_layout.html.twig" %}

{% block layout_panel_title %}
<div class="panel-heading"><span class="glyphicon glyphicon-book"></span> Authentication</div>
{% endblock %}


{% block layout_form %}

<div class="col-md-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">The Error Message - here</h3>
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="input-group">
        <label for="txtUser" class="input-group-addon"><span class="glyphicon glyphicon-user"></span></label>
        <input id="txtUser" type="text" class="form-control" placeholder="User">
    </div>
    <br/>
    <div class="input-group">
        <label for="txtPassword" class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></label>
        <input id="txtPassword" type="password" class="form-control" placeholder="Password">
    </div>
    <br/>
    <label for="chkRememberMe">Remenber Me</label>
    <input id="chkRememberMe" type="checkbox">
    <div style="float:right">
        <button  type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-log-in"></span>
            Log-in
        </button>
    </div>
</div>
{% endblock layout_form %}